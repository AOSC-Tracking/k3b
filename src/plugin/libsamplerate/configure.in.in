LIBS="-lm $all_libraries"
AC_CHECK_FUNCS([lrint],
  [
	AC_TRY_RUN(dnl
    	[
	  #include <math.h>
	  int main()
	  {
		lrint(0);
		return 0;
	  }
	],
        [
          AC_DEFINE(HAVE_LRINT,1,[Define if lrint is supported])
        ],
        [
          AC_DEFINE(HAVE_LRINT,0,[Define if lrint is not supported])
        ])
  ]
)

AC_CHECK_FUNCS([lrintf],
  [
        AC_TRY_RUN(dnl
        [
          #include <math.h>
          int main()
          {
                lrintf(0);
                return 0;
          }
        ],
        [
          AC_DEFINE(HAVE_LRINT,1,[Define if lrint is supported])
        ],
        [
          AC_DEFINE(HAVE_LRINT,0,[Define if lrint is not supported])
        ])
  ]
)
